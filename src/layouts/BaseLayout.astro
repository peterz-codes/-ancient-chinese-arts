---
import '../styles/global.css';
export interface Props {
  title: string;
  description?: string;
}

const { title, description = '古代房中术——道家养生经典文献研究' } = Astro.props;
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/',          label: '首页' },
  { href: '/chapters',  label: '篇目' },
  { href: '/context',   label: '历史背景' },
  { href: '/about',     label: '关于本书' },
];
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title} — 古代房中术</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Noto+Serif+SC:wght@300;400;500;600;700&family=Ma+Shan+Zheng&display=swap"
    rel="stylesheet"
  />
</head>
<body class="min-h-screen bg-paper font-serif text-ink">

  <!-- Top decorative border -->
  <div class="h-1 bg-gradient-to-r from-paper via-vermil to-paper"></div>

  <!-- Header -->
  <header class="border-b border-border bg-paper/95 backdrop-blur-sm sticky top-0 z-50">
    <div class="max-w-6xl mx-auto px-6 py-4">
      <div class="flex items-center justify-between">
        <!-- Logo / Site title -->
        <a href="/" class="flex items-center gap-3 group">
          <div class="w-10 h-10 border-2 border-vermil flex items-center justify-center text-vermil text-lg font-display group-hover:bg-vermil group-hover:text-paper transition-colors duration-300">
            古
          </div>
          <div>
            <div class="text-sm font-semibold text-vermil tracking-widest">古代房中术</div>
            <div class="text-xs text-sepia tracking-wider">道家养生经典</div>
          </div>
        </a>

        <!-- Navigation -->
        <nav class="hidden md:flex items-center gap-8">
          {navLinks.map(link => (
            <a
              href={link.href}
              class={`text-sm tracking-widest transition-colors duration-200 border-b-2 pb-0.5 ${
                currentPath === link.href
                  ? 'text-vermil border-vermil'
                  : 'text-sepia border-transparent hover:text-vermil hover:border-gold'
              }`}
            >
              {link.label}
            </a>
          ))}
        </nav>

        <!-- Mobile menu button -->
        <button id="menu-btn" class="md:hidden text-sepia hover:text-vermil p-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Mobile nav -->
      <nav id="mobile-nav" class="hidden md:hidden pt-4 pb-2 border-t border-border mt-4">
        {navLinks.map(link => (
          <a
            href={link.href}
            class={`block py-2 text-sm tracking-widest ${
              currentPath === link.href ? 'text-vermil' : 'text-sepia'
            }`}
          >
            {link.label}
          </a>
        ))}
      </nav>
    </div>
  </header>

  <!-- Page content -->
  <main>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="mt-20 border-t border-border bg-paper-dark">
    <div class="max-w-6xl mx-auto px-6 py-12">
      <div class="grid md:grid-cols-3 gap-8">
        <div>
          <h3 class="text-vermil font-semibold tracking-widest mb-3">古代房中术</h3>
          <p class="text-sepia text-sm leading-relaxed">
            本站以学术视角呈现中国道家传统养生文化，
            供研究者与文化爱好者参考。
          </p>
        </div>
        <div>
          <h3 class="text-gold font-semibold tracking-widest mb-3">快速导航</h3>
          <ul class="space-y-1.5">
            {navLinks.map(link => (
              <li>
                <a href={link.href} class="text-sepia text-sm hover:text-vermil transition-colors tracking-wider">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
        <div>
          <h3 class="text-gold font-semibold tracking-widest mb-3">相关经典</h3>
          <ul class="space-y-1.5 text-sepia text-sm">
            <li>《素女经》</li>
            <li>《玉房秘诀》</li>
            <li>《洞玄子》</li>
            <li>《医心方》</li>
          </ul>
        </div>
      </div>

      <div class="mt-10 pt-6 border-t border-border flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-sepia text-xs tracking-wider">
          本站内容仅供学术研究与文化参考，不构成医疗建议。
        </p>
        <p class="text-sepia text-xs tracking-wider">
          ❖ 道家文化研究 ❖
        </p>
      </div>
    </div>
  </footer>

  <!-- Bottom decorative border -->
  <div class="h-1 bg-gradient-to-r from-paper via-vermil to-paper"></div>

  <script>
    const btn = document.getElementById('menu-btn');
    const nav = document.getElementById('mobile-nav');
    btn?.addEventListener('click', () => nav?.classList.toggle('hidden'));
  </script>
</body>
</html>
